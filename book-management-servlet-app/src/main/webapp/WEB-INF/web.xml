<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- Admin Controller -->
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>com.vbc.servlet.management.controller.AdminController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/AdminController</url-pattern>
  </servlet-mapping>

  <!-- Book Controller -->
  <servlet>
    <servlet-name>BookController</servlet-name>
    <servlet-class>com.vbc.servlet.management.controller.BookController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BookController</servlet-name>
    <url-pattern>/BookController</url-pattern>
  </servlet-mapping>

  <!-- User Controller -->
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.vbc.servlet.management.controller.UserController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/UserController</url-pattern>
  </servlet-mapping>

</web-app>
